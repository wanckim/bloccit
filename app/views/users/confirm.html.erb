<h1>Sign Up Confirmation</h1>
<h3>Are you sure these values are correct?</h3>

<div class="row">
  <div class="col-md-4">
    <h4>Email: <%= @user.email %></h4>
    <h4>Name: <%= @user.name %></h4>

    <div class="button" style="display:inline-block">
      <%= button_to "Yes", {controller:"users", action: "create", params: params.permit!}, class: 'btn btn-success' %>
    </div>
    <div class="button" style="display:inline-block">
      <%= button_to "No", new_user_path, method: "get", class: 'btn btn-danger' %>
    </div>
  </div>
</div>
